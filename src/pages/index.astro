---
import Layout from "@/layouts/Layout.astro"
import Navbar from "@/components/Navbar.astro"
import Hero from "@/components/Hero.astro"

// Mejora SEO con metadatos estructurados
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Event",
  name: "Surferss Wave - Experiencia exclusiva de Surf",
  description:
    "Un viaje exclusivo con Sofía y sus amigos que combina surf, diversión, playa, fiestas, DJs, y muchas actividades más.",
  image: "/sofia-surferrs-hero.png",
  offers: {
    "@type": "Offer",
    availability: "https://schema.org/LimitedAvailability",
    price: "0",
    priceCurrency: "EUR",
    validFrom: "2025-06-01",
    url: "https://surferswave.com/#inscripcion",
  },
  organizer: {
    "@type": "Organization",
    name: "Surferss Wave",
    url: "https://surferswave.com",
  },
  eventStatus: "https://schema.org/EventScheduled",
  eventAttendanceMode: "https://schema.org/OfflineEventAttendanceMode",
}
---

<Layout
  title="Surferss Wave - Viaja con Sofía a una experiencia única de surf"
  description="Viaje exclusivo al que solo se podrá acceder a través de las marcas Embajadoras de Surferss Wave. Surf, diversión, playa, fiestas y actividades con Sofía."
>
  <main class="w-full">
    <Navbar />
    <Hero />

    <!-- Secciones -->
  </main>
</Layout>

<!-- Agregar metadatos estructurados para SEO -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
