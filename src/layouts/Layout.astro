---
import Analytics from '@vercel/analytics/astro'
import Footer from '@/components/Footer.astro'

import '@fontsource/bebas-neue'

import '@/styles/global.css'

interface Props {
  title?: string
  description?: string
  ogImage?: string
}

const {
  title = 'Surferss Wave - Experiencia única de Surf',
  description = 'Viaja junto a Sofía y sus amigos. Un viaje exclusivo con surf, diversión, playa, fiestas y mucho más. Solo disponible a través de marcas Embajadoras de Surferss Wave.',
  ogImage = 'https://www.surferswavetrip.com/og.jpg',
} = Astro.props

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Event',
  name: 'Surferss Wave - Experiencia exclusiva de Surf',
  description:
    'Un viaje exclusivo con Sofía y sus amigos que combina surf, diversión, playa, fiestas, DJs, y muchas actividades más.',
  image: '/sofia-surferrs-hero.png',
  startDate: '2025-06-01',
  endDate: '2025-06-08',
  location: {
    '@type': 'Place',
    name: 'Latas Surf House',
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Somo',
      addressRegion: 'Cantabria',
      addressCountry: 'ES',
    },
  },
  performer: {
    '@type': 'Person',
    name: 'Sofía Surferss',
  },
  offers: {
    '@type': 'Offer',
    availability: 'https://schema.org/LimitedAvailability',
    price: '0',
    priceCurrency: 'EUR',
    validFrom: '2025-06-01',
    url: 'https://surferswave.com/#inscripcion',
  },
  organizer: {
    '@type': 'Organization',
    name: 'Surferss Wave',
    url: 'https://surferswave.com',
  },
  eventStatus: 'https://schema.org/EventScheduled',
  eventAttendanceMode: 'https://schema.org/OfflineEventAttendanceMode',
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Metadatos SEO básicos -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="surf, campamento de surf, Surferss Wave, playa, actividades acuáticas, experiencia surf, Sofía, viaje exclusivo"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.surferswavetrip.com" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.surferswavetrip.com" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.surferswavetrip.com" />

    <!-- Agregar metadatos estructurados para SEO -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />
  </head>
  <body class="text-gray-800 min-h-screen pb-24">
    <slot />
    <Analytics />
    <Footer />
  </body>
</html>
