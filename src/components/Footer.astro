---
import InfoJobsLogo from '@/assets/infojobs.svg'

interface INetworkData {
  rrssURL: string
  rrssSVGPath: string
  rrssAlt: string
}

const networkData: INetworkData[] = [
  {
    rrssURL: 'https://www.instagram.com/sofia_surferss/',
    rrssSVGPath: '/instagram-logo.svg',
    rrssAlt: 'Instagram logo',
  },
  {
    rrssURL: 'https://www.tiktok.com/@sofiamoreno_',
    rrssSVGPath: '/tiktok-logo.svg',
    rrssAlt: 'Tiktok logo',
  },
  {
    rrssURL: 'https://www.youtube.com/@sofia_surferss',
    rrssSVGPath: '/youtube-logo.svg',
    rrssAlt: 'Youtube logo',
  },
]
---

<footer
  class="pt-48 px-6 md:px-8 max-w-7xl mx-auto flex items-center justify-center flex-col"
>
  <img
    src="/logo-surferrss-wave.svg"
    alt="Logo surferss"
    loading="eager"
    width={150}
    height={650}
    class="m-20 w-64"
  />

  <div class="flex flex-row items-start justify-center gap-24">
    <div class="flex flex-col items-center justify-center">
      <p class="mb-2 text-primary font-bebas md:text-xl">Copyright Â© 2025</p>

      <div class="flex mb-10 items-center justify-center gap-2">
        {
          networkData.map(rrss => (
            <a href={rrss.rrssURL} class="text-primary">
              <img src={rrss.rrssSVGPath} alt={rrss.rrssAlt} class="w-7" />
            </a>
          ))
        }
      </div>
    </div>

    <div class="flex flex-col items-center justify-center mb-10">
      <p class="text-primary text-sm mb-3 text-center">Desarrollado por</p>
      <a
        href="https://www.infojobs.net/"
        target="_blank"
        rel="noopener noreferrer"
        class="transition-opacity hover:opacity-80"
      >
        <img
          src={InfoJobsLogo.src}
          alt="InfoJobs - Desarrollado por InfoJobs"
          class="h-8 w-auto"
          loading="lazy"
        />
      </a>
    </div>
  </div>
</footer>
