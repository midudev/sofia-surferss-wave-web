---
const { id, class: className, isBeforeFooter = false } = Astro.props

const backgroundImage = isBeforeFooter
  ? "bg-[url('../assets/footer-text.svg')]"
  : "bg-[url('../assets/separator.webp')]"
---

<section id={id} class={`${className} bg-cover bg-top -mb-40`}>
  <div class="py-48 px-6 md:px-8 max-w-7xl mx-auto">
    <slot />
  </div>

  <div class=`${backgroundImage} bg-center bg-cover relative h-[196px]`></div>
</section>
